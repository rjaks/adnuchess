{
    "name": "nuxt-app",
    "type": "module",
    "private": true,
    "scripts": {
        "build": "nuxt build",
        "dev": "nuxt dev",
        "generate": "nuxt generate",
        "preview": "nuxt preview",
        "postinstall": "nuxt prepare",
        "convex:dev": "convex dev",
        "convex:deploy": "convex deploy",
        "convex:codegen": "convex codegen",
        "start": "node .output/server/index.mjs",
        "start:prod": "NODE_ENV=production node .output/server/index.mjs",
        "health": "curl -f http://localhost:3000/api/health || exit 1",
        "logs": "tail -f logs/combined.log",
        "test": "echo \"No tests specified\" && exit 0",
        "lint": "eslint . --ext .vue,.js,.ts",
        "lint:fix": "eslint . --ext .vue,.js,.ts --fix",
        "typecheck": "nuxt typecheck",
        "docker:build": "docker build -t adnu-chess .",
        "docker:run": "docker run -d --name adnu-chess -p 3000:3000 --env-file .env.production adnu-chess",
        "docker:stop": "docker stop adnu-chess && docker rm adnu-chess",
        "pm2:start": "pm2 start ecosystem.config.js --env production",
        "pm2:stop": "pm2 stop adnu-chess",
        "pm2:restart": "pm2 restart adnu-chess",
        "pm2:logs": "pm2 logs adnu-chess",
        "backup:db": "node scripts/backup-db.js",
        "deploy:prod": "npm run build && npm run pm2:restart"
    },
    "dependencies": {
        "@nuxt/devtools": "^2.6.5",
        "@sentry/node": "^10.19.0",
        "@sentry/vue": "^10.19.0",
        "chess.js": "^1.4.0",
        "convex": "^1.27.3",
        "convex-vue": "^0.1.5",
        "express-rate-limit": "^8.1.0",
        "google-auth-library": "^9.15.1",
        "nuxt": "^4.1.2",
        "stockfish": "^16.0.0",
        "vue": "^3.5.21",
        "vue-router": "^4.5.1",
        "winston": "^3.18.3",
        "zod": "^4.1.12"
    },
    "devDependencies": {
        "@nuxtjs/tailwindcss": "^6.14.0",
        "@types/node": "^24.6.1"
    }
}
